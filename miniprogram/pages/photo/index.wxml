<!--pages/photo/index.wxml-->
<view>
  <image class="loading" wx:if="{{ loading }}" src="/images/loading.gif" mode="aspectFit"/>
  <view class="nothing" wx:if="{{ !loading && !photos.length }}">
    <view>这个相册还没有照片</view>
    <view>正在上传中</view>
    <view>客观您先看看其他的吧</view>
  </view>
  <view class="photos" wx:if="{{ !loading && photos.length }}">
    <view
      class="photo"
      wx:for="{{photos}}"
      wx:for-item="photo"
      wx:key="unique"
      data-cover="{{photo.cover}}"
      data-src="{{photo.src}}"
      bind:tap="preview"
    >
      <image src="{{photo.cover}}" mode="aspectFill"/>
    </view>
  </view>
</view>