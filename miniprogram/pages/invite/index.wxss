/* pages/invite/index.wxss */
.content {
  position: relative;
  width: 90vmin;
  margin: 0 auto;
}
/* 婚礼邀请函 */
.invitation image {
  height: calc(110vmin / 7.5);
  width: 100%;
  margin: calc(30vmin / 7.5) 0;
}
/* 头部 */
.header {
  position: relative;
  height: calc(735vmin / 7.5);
}
.header .bg {
  width: 100%;
  height: calc(450vmin / 7.5);
}
.header .label {
  width: calc(240vmin / 7.5);
  height: calc(500vmin / 7.5);
  background-color: #fff;
  border-radius: calc(120vmin / 7.5);
  position: absolute;
  top: calc(200vmin / 7.5);
  left: calc(50vmin / 7.5);
  box-shadow: rgb(153, 153, 153) 0px 0px 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.header .label image {
  width: calc(100% - 40vmin / 7.5);
}
.header .label .image-1 {
  border-top-left-radius: calc(100% - 40vmin / 7.5);
  border-top-right-radius: calc(100% - 40vmin / 7.5);
  margin-top: calc(20vmin / 7.5);
  height: calc(225vmin / 7.5);
}
.header .label .image-2 {
  height: calc(80vmin / 7.5);
  margin-top: calc(10vmin / 7.5);
}
.header .label .xi {
  color: rgb(133, 22, 14);
  font-size: calc(100vmin / 7.5);
  padding-bottom: calc(10vmin / 7.5);
}
.header .text {
  position: absolute;
  margin-top: calc(40vmin / 7.5);
  right: calc(50vmin / 7.5);
  text-align: center;
}
.header .name-plain {
  font-weight: bolder;
  font-size: calc(32vmin / 7.5);
}
.header .plain {
  margin-top: calc(10vmin / 7.5);
  font-size: calc(26vmin / 7.5);
  color: #6D727F;
}
.top-info .text {
  font-size: calc(26vmin / 7.5);
  text-align: center;
  margin: calc(15vmin / 7.5) 0;
  color: #6D727F;
}
/* 视频 */
.video-wrap {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-top: calc(50vmin / 7.5);
}
.video {
  width: 100%;
  height: calc(330vmin / 7.5);
  border-top-left-radius: calc(15vmin / 7.5);
  border-top-right-radius: calc(15vmin / 7.5);
}
/* 弹幕 */
.danmu-wrap {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  background-color: #000000;
  border-bottom-left-radius: calc(15vmin / 7.5);
  border-bottom-right-radius: calc(15vmin / 7.5);
  height: calc(60vmin / 7.5);
}
.danmu-wrap .input {
  flex-grow: 1;
  font-size: calc(16vmin / 7.5);
  color: #FFFFFF;
  padding: 0 calc(18vmin / 7.5);
  height: 100%;
}
.danmu-wrap .button {
  font-size: calc(16vmin / 7.5);
  color: #FFFFFF;
  padding: 0 calc(35vmin / 7.5);
  display: flex;
  align-items: center;
  font-weight: bolder;
}
/* 婚礼详细信息 */
.info {
  margin: calc(70vmin / 7.5) 0;
}
.info .text {
  font-size: calc(26vmin / 7.5);
  text-align: center;
  margin: calc(15vmin / 7.5) 0;
  color: #6D727F;
}
.info .title {
  text-align: center;
  font-weight: bold;
  font-size: calc(32vmin / 7.5);
  margin: calc(40vmin / 7.5) 0;
}

.calendar {
  width: 100%;
  margin: calc(20vmin / 7.5) 0;
}
.map-wrap {
  border-radius: calc(15vmin / 7.5);
  padding: calc(20vmin / 7.5);
  margin: calc(20vmin / 7.5) calc(20vmin / 7.5) calc(50vmin / 7.5);
  box-shadow: rgb(153, 153, 153) 0px 0px 8px;
  color: #6D727F;
}
.map-wrap view {
  text-align: left;
  font-size: calc(26vmin / 7.5);
}
.map {
  width: 100%;
  height: calc(350vmin / 7.5);
}
.tip {
  font-size: calc(22vmin / 7.5);
  margin-bottom: calc(40vmin / 7.5);
}
/* 联系我们 */
.connect {
  position: relative;
  color: #6D727F;
  border-radius: calc(28vmin / 7.5);
  margin: 0;
  border: 1px solid #6D727F;
  height: calc(60vmin / 7.5);
  margin-left: 50%;
  transform: translateX(-50%);
}
.connect .btn-text {
  font-weight: normal;
  font-size: calc(24vmin / 7.5);
  line-height: 1;
  padding: calc(18vmin / 7.5) calc(40vmin / 7.5);
}
.connect .header {
  top: 0;
  height: calc(55vmin / 7.5);
  position: absolute;
}

.connect .header1 {
  left: calc(10vmin / 7.5);
}
.connect .header2 {
  right: calc(10vmin / 7.5);
}
/* 温馨提示 */
.tips view {
  font-size: calc(20vmin / 7.5);
  color: #6D727F;
  line-height: 1;
  margin: calc(16vmin / 7.5) 0;
}
.tips view.title {
  color: #000;
  display: inline-block;
  font-weight: bolder;
  font-size: calc(32vmin / 7.5);
  padding: calc(15vmin / 7.5);
  background-color: #999999;
  margin-bottom: calc(20vmin / 7.5);
}
.tips .gap {
  height: calc(30vmin / 7.5);
}
.ending {
  height: calc(180vmin / 7.5);
  margin: calc(90vmin / 7.5) 0;
  width: 100%;
}
