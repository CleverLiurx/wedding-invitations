.connect {
  position: relative;
  color: #6D727F;
  border-radius: 28rpx;
  margin: 0;
  border: 1px solid #6D727F;
  height: 60rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}
.connect .btn-text {
  font-weight: normal;
  font-size: 24rpx;
  line-height: 1;
  padding: 18rpx 40rpx;
}
.connect .header {
  top: 0;
  height: 55rpx;
  position: absolute;
}

.connect .header1 {
  left: 10rpx;
}
.connect .header2 {
  right: 10rpx;
}
/* 温馨提示 */
.tips view {
  font-size: 20rpx;
  color: #6D727F;
  line-height: 1;
  margin: 16rpx 0;
}
.tips view.title {
  color: #000;
  display: inline-block;
  font-weight: bolder;
  font-size: 32rpx;
  padding: 15rpx;
  background-color: #999999;
  margin-bottom: 20rpx;
}
.tips .gap {
  height: 30rpx;
}
.ending {
  height: 180rpx;
  margin: 90rpx 0;
  width: 100%;
}
