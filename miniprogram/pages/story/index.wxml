<!--pages/story/index.wxml-->
<ui-music></ui-music>
<view class="content">
  <!-- 我把另一半介绍给你 -->
  <image class="title-image" src="../../images/he.png" mode="aspectFit"/>
  <!-- 头部 -->
  <view class="header">
    <image class="bg" src="/images/story-main.png" mode="aspectFill"/>
    <view class="label">
      <image class="image-1" src="../../images/story-label-1.png" mode=""/>
      <image class="image-2" src="../../images/story-label-2.png" mode="aspectFit"/>
      <text class="xi">囍</text>
    </view>
    <view class="text">
      <view class="name-plain">刘容新 & 石蕊</view>
      <view class="plain">2024.10.04</view>
      <view class="plain">我们终于交卷啦</view>
    </view>
  </view>
  <!-- 月亮 -->
  <view class="tc">
    <view>出生时的月亮</view>
    <view>Random luck in universe</view>
    <view>宇宙间相遇的浪漫</view>
  </view>
  <view class="moon">
    <image src="../../images/moon-1.jpg" mode="widthFix"/>
    <image src="../../images/moon-2.jpg" mode="widthFix"/>
    <view class="birthday">丙子鼠年 九月初十</view>
    <view class="birthday">乙亥猪年 润八月初七</view>
  </view>
  <!-- 我们的故事 -->
  <view class="our-story {{s.class}}" wx:for="{{stories}}" wx:for-item="s" wx:key="unique">
    <text class="our-story-title" wx:if="{{s.title&&s.title.length>0}}">{{s.title}}</text>
    <text class="our-story-subtitle" wx:for="{{s.subtitles}}" wx:for-item="st" wx:key="unique">{{st}}</text>
    <view class="story-img-wrap {{s.imageView}}">
        <image class="story-img-item-{{imx+1}}" data-src="{{im.src}}" lazyLoad="true" mode="{{im.mode}}" src="{{im.src}}" wx:for="{{s.images}}" wx:for-index="imx" wx:for-item="im" wx:key="unique"></image>
    </view>
  </view>
  <!-- 一段话 -->
  <view class="tc">
    <view>相识十年</view>
    <view>恋爱七载</view>
    <view>有哭有笑 有吵有闹</view>
    <view>相伴的每一天都是我们的独家记忆</view>
    <view>未来长长的路</view>
    <view>我陪你慢慢的走</view>
    <image class="flower" src="/images/flower.png" mode="aspectFit"/>
  </view>
  <!-- loding gif -->
</view>
